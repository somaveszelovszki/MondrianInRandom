<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MondrianInRandom"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MondrianInRandom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LockScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.MondrianInRandom"
            android:launchMode="singleInstance">
        </activity>
        <service android:name=".ScreenStateService" />
        <receiver
            android:name=".ScreenStateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="ACTION_BOOT_COMPLETED" />
                <action android:name="ACTION_SCREEN_ON" />
                <action android:name="ACTION_SCREEN_OFF" />
            </intent-filter>
        </receiver>

    </application>

</manifest>